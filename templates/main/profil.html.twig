{% extends "base.html.twig" %}

{% block body %}
<div class="container my-4">
<h1 class="text-center mb-4">Liste de vos commandes</h1>

<table class="table">
<thead>
    <tr>
        <th>Nom de l'article</th>
        <th>Quantité</th>
        <th>Date de la commande</th>
        <th>Prix total</th>
        
    </tr>
</thead>
<tbody>
{% for item in commandes %}
    <tr>
        <td>{{ item.produit.titre}}</td>
        <td>{{ item.quantite}}</</td>
        <td>{{ item.dateEnregistrement|date('d/m/Y à H:i:s') }}</</td>
        <td>{{ item.montant }}€</td>
    </tr>
{% endfor %}
</tbody>
</table>
</div>
{% endblock %}